	public void FuncDecl.checkNames(PrintStream err, SymbolTable symbols) {
		getName().checkNames(err, symbols);
		if(hasParam()) {
			symbols = symbols.push();
			for(int i = 0; i < getNumParam(); ++i) {
				getParam(i).checkNames(err, symbols);
			}
			getBlock().checkNames(err, symbols);
		}
	}
	
	public void Block.checkNames(PrintStream out, SymbolTable symbols) {
		if(hasStmt()) {
			for(int i = 0; i < getNumStmt(); ++i) {
				getStmt(i).checkNames(out, symbols);
			}
		}
	}
	
	public void IfStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
		
		// THEN and ELSE blocks have the same depth, but different symsbol tables 
		getThen().checkNames(err, symbols.push()); // analyse Then:Block 
		if(hasElse())  {					// analyse Else:Block, but only if Else:Block exists
			getElse().checkNames(err, symbols.push());
		}
	}
	
	/**
	 * WhileStmt : Stmt ::= Expr Block;
	 */
	public void WhileStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
		getBlock().checkNames(err, symbols.push()); // analyse Then:Block 
	}
	/**
	 * PrintStmt : Stmt ::= Expr;
	 */
	public void PrintStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
	}
	
	public void ReturnStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
	}
	
	public void AssignStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getIdUseExpr().checkNames(err, symbols);
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
	}
	
	public void DeclAssignStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getIdDecl().checkNames(err, symbols);
		getExpr().checkNames(err, symbols); // IF parameters retain old depth
	}
	
	public void DeclStmt.checkNames(PrintStream err, SymbolTable symbols) {
		getIdDecl().checkNames(err, symbols);
	}
	
	public void FuncUseExpr.checkNames(PrintStream err, SymbolTable symbols) {
		getIdUseExpr().checkNames(err, symbols);
		if(hasExpr()) {
			for(int i = 0; i < getNumExpr(); ++i) {
				getExpr(i).checkNames(err, symbols);
			}
		}
	}
	
	
